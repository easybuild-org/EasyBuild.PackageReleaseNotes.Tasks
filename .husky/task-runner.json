{
    "tasks": [
        {
            "name": "fantomas-format-staged-files",
            "group": "pre-commit",
            "command": "dotnet",
            "args": [
                "fantomas",
                "${staged}"
            ],
            "include": [
                "**/*.fs",
                "**/*.fsx",
                "**/*.fsi"
            ]
        }
    ]
}
